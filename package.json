{
  "name": "@graz-sh/graz",
  "version": "0.0.0",
  "workspaces": [
    "example/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build --filter=!@project/example-next --filter=!@project/starter --filter=!@project/example-vite",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "example:next": "yarn workspace @project/example-next",
    "example:vite": "yarn workspace @project/example-vite",
    "example:starter": "yarn workspace @project/starter",
    "graz": "yarn workspace graz",
    "lint": "turbo run lint",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@graz-sh/style-guide": "4.0.1",
    "eslint": "8.49.0",
    "p-map": "^6.0.0",
    "prettier": "3.0.3",
    "tsup": "^7.2.0",
    "turbo": "2.1.2",
    "typescript": "^5.2.2"
  },
  "resolutions": {
    "@leapwallet/buffer-boba": "0.1.6",
    "@walletconnect/types": "2.10.0",
    "@walletconnect/utils": "2.10.0"
  },
  "main": "./packages/graz/dist/index.js",
  "module": "./packages/graz/dist/index.mjs",
  "types": "./packages/graz/dist/index.d.ts",
  "bin": "./packages/graz/dist/cli.js",
  "exports": {
    ".": {
      "types": "./packages/graz/dist/index.d.ts",
      "import": {
        "types": "./packages/graz/dist/index.d.mts",
        "default": "./packages/graz/dist/index.mjs"
      },
      "module": "./packages/graz/dist/index.mjs",
      "default": "./packages/graz/dist/index.js"
    },
    "./chains": {
      "types": "./packages/graz/chains/index.ts",
      "module": "./packages/graz/chains/index.mjs",
      "default": "./packages/graz/chains/index.js"
    }
  },
  "files": [
    "packages/graz/chains/*.stub",
    "packages/graz/dist/*",
    "packages/graz/types/*",
    "packages/graz/env.d.ts"
  ],
  "packageManager": "yarn@4.4.1",
  "prettier": "@graz-sh/style-guide/prettier",
  "private": true,
  "license": "MIT"
}
